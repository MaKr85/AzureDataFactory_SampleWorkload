{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dp-datafactory-mkr-tst"
		},
		"DWH_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'DWH'"
		},
		"FileStorage_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'FileStorage'"
		},
		"dpstoragetstmkr_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'dpstoragetstmkr'"
		},
		"external_sql_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'external_sql'"
		},
		"CurrencyAPI_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://www.live-rates.com/rates"
		},
		"FileStorage_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "\\\\dpstoragetstmkr.file.core.windows.net\\stockdata"
		},
		"FileStorage_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "Azure\\dpstoragetstmkr"
		},
		"dp_keyvault_all_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://dp-keyvault-all.vault.azure.net/"
		},
		"dpstoragetstmkr_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dpstoragetstmkr.dfs.core.windows.net"
		},
		"DailyTrigger_properties_Master_LoadAll_parameters_FullLoad": {
			"type": "bool",
			"defaultValue": false
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "dp-datafactory-mkr-tst_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"FileStorage_password": {
						"value": "[parameters('FileStorage_password')]"
					},
					"dpstoragetstmkr_accountKey": {
						"value": "[parameters('dpstoragetstmkr_accountKey')]"
					},
					"CurrencyAPI_properties_typeProperties_url": {
						"value": "[parameters('CurrencyAPI_properties_typeProperties_url')]"
					},
					"FileStorage_properties_typeProperties_host": {
						"value": "[parameters('FileStorage_properties_typeProperties_host')]"
					},
					"FileStorage_properties_typeProperties_userId": {
						"value": "[parameters('FileStorage_properties_typeProperties_userId')]"
					},
					"dp_keyvault_all_properties_typeProperties_baseUrl": {
						"value": "[parameters('dp_keyvault_all_properties_typeProperties_baseUrl')]"
					},
					"dpstoragetstmkr_properties_typeProperties_url": {
						"value": "[parameters('dpstoragetstmkr_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "dp-datafactory-mkr-tst_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"DWH_connectionString": {
						"value": "[parameters('DWH_connectionString')]"
					},
					"external_sql_connectionString": {
						"value": "[parameters('external_sql_connectionString')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'dp-datafactory-mkr-tst_ArmTemplate_0')]"
			]
		},
		{
			"name": "dp-datafactory-mkr-tst_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"DailyTrigger_properties_Master_LoadAll_parameters_FullLoad": {
						"value": "[parameters('DailyTrigger_properties_Master_LoadAll_parameters_FullLoad')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'dp-datafactory-mkr-tst_ArmTemplate_1')]"
			]
		}
	]
}